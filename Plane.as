/* ---- Plane class used for drawing boxes ---- */package christopherhein{	import flash.display.*;	import flash.events.*;		public  class Plane extends Sprite	{		// Variables		private var rX:Number;		private var rY:Number;				public function Plane( w:Number, h:Number, c:uint, a:Number, x:Boolean, y:Boolean )		{				// Base Settings			rX = 0;			rY = 0;								// Variables			var rW:Number = w * -.5;			var rH:Number = h * -.5;								// Graphics			graphics.beginFill( c, a ); // Fill and Alpha			graphics.drawRect( rW, rH, w, h ); // Registration X, Registration Y, Width, Height			graphics.endFill(  ); // No Parameters							// Event Listeners			if( x == true )			{				addEventListener( Event.ENTER_FRAME, onXFrame );			}			if( y == true )			{				addEventListener( Event.ENTER_FRAME, onYFrame );			}					} // --- Ends the Constructor				// Private Functions			// X Rotation 		private function onXFrame( Evt:Event ):void		{				// Setting the Rotation			rX = stage.mouseY - ( stage.height / 2 );			rotationX -= ( rotationX - rX ) * .15;		}					// Y Rotation		private function onYFrame( Evt:Event ):void		{				// Setting the Rotation			rY = stage.mouseX - ( stage.width / 2 );			rotationY -= ( rotationY - rY ) * .15;		}					} // --- End of the Plane Class}/* ---------- Notes ----------- *//*	Sprite is an MovieClip in flash that does not have a timeline	you can only create this using Actionscript		• graphics refers to the graphics method	• .beginFill sets the color and the alpha of your object	• .drawRect is where you set the size and registration location of you box	• .endFill end the object draw method	• Hex Colors in flash 0x = the hash mark	*//* ---------- End of the Notes ----------- */