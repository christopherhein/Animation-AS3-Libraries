package christopherhein{	import flash.display.*;	import flash.events.*;	import flash.text.*;	import com.webdevils.*;	import caurina.transitions.*;		public class Progress_Bar	{			// Private Variables		private var _target:*;		private var _bar:MovieClip;		private var _box:MovieClip;		private var _percent:TextField;				public function Progress_Bar( target:*, bar:MovieClip, box:MovieClip, percent:TextField )		{				// Assigning local Variables			_target = target;			_bar = bar;			_box = box;			_percent = percent;										// Setting Original Invisible			_bar.visible = false;			_box.visible = false;			_percent.visible = false;								// Event Listeners			_target.addEventListener( Event.OPEN, onOpen );			_target.addEventListener( Event.COMPLETE, onComplete );			_target.addEventListener( ProgressEvent.PROGRESS, onProgress );					} // ---- End Progress_Bar -----				private function onOpen( Evt:Event ):void		{			_bar.visible = true;			_box.visible = true;			_percent.visible = true;		}				private function onComplete( Evt:Event ):void		{			_bar.visible = false;			_box.visible = false;			_percent.visible = false;					}				private function onProgress( Evt:ProgressEvent ):void		{				// Variable for the Total Loaded			var p = Evt.bytesLoaded/Evt.bytesTotal				// Scaling the Bar			_bar.scaleX = p;				// Writing out the total			_percent.text = Math.round( p * 100 ) + "%";		}			} // ---------- End Class -----------} // -------------- End Package ---------